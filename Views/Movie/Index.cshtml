
@model IEnumerable<Vidly.Models.Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div class="btn btn-primary">
    @Html.ActionLink("Create New", "ViewForm", "Movie")
</div>

   
<table id="MovieTable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    @*  @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(@movie.Name, "ViewForm", "Movie", new { Id = movie.Id })</td>
            <td>@movie.Genre.Name</td>
        </tr>
    } *@
    </tbody>
</table>


@section scripts{
    <script>
        $(document).ready(function () {
          var table = $("#MovieTable").DataTable({
                ajax: {
                    url: "api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, row, meta) {
                            // console.log('data: ' + data);
                            // console.log('type: ' + type);
                            // console.log('row: ' + row);
                            // console.log('meta: ' + meta);
                            return "<a href='movie/edit/" + row.id + "'>" + data + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                                return "<button class='btn btn-link js-delete' data-customer-id=" + data + "> DELETE </button>";
                        }
                    }

                ]
          });

            $("#MovieTable").on("click", ".js-delete", function () {

                var deleteButton = $(this);
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "api/movies/" + deleteButton.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(deleteButton.parents("tr")).remove().draw();
                            },
                            failure: function (result) {
                                console.log(result);
                            }
                        });
                    }
                });

            });

        });
    </script>
}